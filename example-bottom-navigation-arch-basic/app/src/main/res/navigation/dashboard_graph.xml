<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_dashboard"
    app:startDestination="@id/dashboardFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.rhexgomez.demo.bottomnavigationbasic.ui.dashboard.DashboardFragment"
        android:label="fragment_dashboard_second"
        tools:layout="@layout/fragment_dashboard_second">
        <action
            android:id="@+id/actionOpenSecondFragment"
            app:destination="@id/dashboardSecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardSecondFragment"
        android:name="com.rhexgomez.demo.bottomnavigationbasic.ui.dashboard.DashboardSecondFragment"
        android:label="DashboardSecondFragment"
        tools:layout="@layout/fragment_dashboard_second" />

</navigation>